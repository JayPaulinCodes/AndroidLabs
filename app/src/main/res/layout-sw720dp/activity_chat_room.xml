<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoomActivity">

    <ListView
        android:id="@+id/chatRoom_listView_messages"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        android:layout_alignParentTop="true">

    </ListView>

    <Button
        android:id="@+id/chatRoom_button_send"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="@string/chatRoom_button_send"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/chatRoom_editText_message"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="10"
        android:hint="@string/chatRoom_editText_message"
        android:inputType="text"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/chatRoom_button_send" />

    <Button
        android:id="@+id/chatRoom_button_receive"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="@string/chatRoom_button_receive"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/chatRoom_editText_message" />

    <FrameLayout
        android:id="@+id/chatRoom_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/chatRoom_listView_messages"
        android:layout_marginLeft="5dp">

    </FrameLayout>


</RelativeLayout>

